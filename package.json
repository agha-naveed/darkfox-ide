{
  "name": "darkfox-ide",
  "version": "1.0.0",
  "main": "public/electron.js",
  "homepage": "./",
  "author": {
    "name": "Agha Naveed Abbas",
    "email": "naveedabs31@gmail.com",
    "portfolio": "https://aghanaveed.vercel.app"
  },
  "build": {
    "appId": "com.darkfox.app",
    "productName": "DarkFox AI IDE",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "public/**/*",
      "ide-interface/dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "ide-interface/dist",
        "to": "app"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/favicon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/favicon.png"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "cd ide-interface && npm run dev",
    "build": "cd ide-interface && npm run build",
    "e": "electron .",
    "dev": "concurrently \"npm run start\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [],
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "custom-electron-titlebar": "^4.2.8"
  }
}
